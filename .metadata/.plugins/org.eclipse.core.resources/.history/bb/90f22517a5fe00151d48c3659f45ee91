#include <stdio.h>
#include <stdlib.h>
/*    parameters:
 *            - Buffer must be 8 chars long
 *            - 3 digits precision max
 *            - absolute range is -524,287 to 524,287
 *            - resolution (epsilon) is 0.125 and
 *              always rounds down
 **************************************************/
 void ftoa(float Value, char* Buffer)
 {}
int main(void) {
	float n = 123456.1234;
	char ch[12];
	char *ptr = ch;
	ftoa(n, ptr);
	printf("%s", ch);
	return 0;
}
